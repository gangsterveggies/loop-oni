<% provide(:title, "Login in") %>
<h1>Login in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Login", class: "button-style" %>

      <p><%= link_to "Repor Password?", new_password_reset_path %></p>
    <% end %>

