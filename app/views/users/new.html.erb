<% provide(:title, 'Registo') %>
<h1>Registo</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Nome" %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :grade, "Ano Escolar (se não andar na escola escolher 0)" %>
      <%= f.select :grade, options_for_select((0..12)) %>

      <%= f.label :city, "Cidade" %>
      <%= f.text_field :city %>

      <%= f.label :school, "Escola" %>
      <%= f.text_field :school %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmação de Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Criar Conta", class: "button-style" %>
    <% end %>
  </div>
</div>
