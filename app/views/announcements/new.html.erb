<% provide(:title, 'Nova Notificação') %>
<h1>Nova Notificação</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@announcement) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :message, "Mensagem" %>
      <%= f.text_field :message %>

      <%= f.label :end_date, "Data de Início (DD/MM/YYYY HH:MM)" %>
      <%= f.text_field :begin_date, default: Time.now %>

      <%= f.label :end_date, "Data de Fim (DD/MM/YYYY HH:MM)" %>
      <%= f.text_field :end_date, default: Time.now %>

      <%= f.submit "Criar Notificação", class: "button-style" %>
    <% end %>
  </div>
</div>
