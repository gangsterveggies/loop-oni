<% if signed_in? %>
  Logado como <%= link_to current_user.email, current_user %>
  <% if current_user.admin? %>
    [<%= link_to "Admin", admin_path %>]
  <% end %>
  , <%= link_to "logout", signout_path, method: "delete" %>
<% else %>
  Não está logado. Entre aqui: <%= link_to "Login", signin_path %>, ou <%= link_to "registe-se", signup_path %>
<% end %>
