$(function () {
    $('.click-nav ul').hide();
    $('.click-nav').click(function(e) {
        $('.click-nav ul').slideToggle(200);
        e.stopPropagation();
    });
    $(document).click(function() {
        if ($('.click-nav ul').is(':visible')) {
            $('.click-nav ul', this).slideUp();
        }
    });
});

